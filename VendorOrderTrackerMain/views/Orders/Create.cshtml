@{
    ViewData["Title"] = "Create Order";
}

<h1>Create Order</h1>
<form asp-controller="Orders" asp-action="Create" asp-route-vendorId="@ViewData["VendorId"]" method="post">
    <div class="form-group">
        <label>Title</label>
        <input type="text" class="form-control" asp-for="Title" required />
    </div>
    <div class="form-group">
        <label>Description</label>
        <textarea class="form-control" asp-for="Description" required></textarea>
    </div>
    <div class="form-group">
        <label>Price</label>
        <input type="number" class="form-control" asp-for="Price" required />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-controller="Vendors" asp-action="Details" asp-route-id="@ViewData["VendorId"]" class="btn btn-secondary">Cancel</a>
</form>
