@{
    ViewData["Title"] = "Vendor Details";
}

<h1>Vendor Details</h1>
<h3>@Model.Name</h3>
<p>@Model.Description</p>

<h4>Orders</h4>
@if (Model.Orders.Count > 0)
{
    <ul>
        @foreach (var order in Model.Orders)
        {
            <li>@order.Title - @order.Price</li>
        }
    </ul>
}
else
{
    <p>No orders found for this vendor.</p>
}

<p>
    <a asp-controller="Orders" asp-action="Create" asp-route-vendorId="@Model.Id" class="btn btn-primary">Create New Order</a>
</p>
