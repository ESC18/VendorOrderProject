@{
    ViewData["Title"] = "Create Vendor";
}

<h1>Create Vendor</h1>
<form asp-controller="Vendors" asp-action="Create" method="post">
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" asp-for="Name" required />
    </div>
    <div class="form-group">
        <label>Description</label>
        <textarea class="form-control" asp-for="Description" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-controller="Vendors" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
